<div class="field-container">
    <table class="field" id="{{transform_update_id}}_field{{id}}">
        <thead>
            <th colspan="5">
                <div class="header">
                    <div class="field-id">{{id}}</div>
                    <div class="field-name">
                        {{#if name}}
                        @{{name}}
                        {{/if}}
                    </div>
                    <div class="field-producing-arg">
                        {{#if producing_arg}}
                        `{{producing_arg}}`
                        {{/if}}
                    </div>
                    {{#if cow}}
                    <div
                        class="field-owned-info field-is-cow"
                        onmouseenter="highlight('{{transform_update_id}}_field{{cow.source}}')"
                        onmouseleave="unhighlight('{{transform_update_id}}_field{{cow.source}}')"
                    >
                        {{cow.variant}}: {{cow.source}}
                    </div>
                    {{else}}
                    <div class="field-owned-info field-is-owned">owned</div>
                    {{/if}}
                </div>
            </th>
        </thead>
        <thead>
            <th colspan="5">
                <div class="iter-list-descriptor-wrapper">
                    <div class="iter-list-descriptor">Iters:</div>
                    {{>iter_list iters=this.iters transform_update_id=transform_update_id}}
                </div>
            </th>
        </thead>
        <thead>
            <th colspan="5">
                <div class="ref-list">
                    <div class="desc">Refs:</div>
                    <div class="ref size-placeholder">9</div>
                    {{#each field_refs as |ref|}}
                    <div class="ref"
                        onmouseenter="highlight('{{../transform_update_id}}_field{{ref}}')"
                        onmouseleave="unhighlight('{{../transform_update_id}}_field{{ref}}')"
                    >{{ref}}
                    </div>
                    {{/each}}
                </div>
            </th>
        </thead>
        <thead>
            <th class="meta_head">Meta</th>
            <th class="data_head">Data</th>
            <th class="size_head">Size</th>
            <th class="rl_head">RL</th>
            <th class="iters_head">Iters</th>
        </thead>
        <tbody>
            {{#each rows as |row|}}
            {{~let "transform_update_id" ../transform_update_id}}
            {{#each (range row.dead_slots)}}
            <tr class="field_row dead_row"><td colspan="4"></td></tr>
            {{/each}}

            <tr class="row">
                <td >
                    <div class="meta-list">
                        <div class="padding{{row.flag_shadow}}">
                            {{row.padding}}
                        </div>
                        <div class="data_type{{row.flag_shadow}}">
                            {{row.repr}}
                        </div>
                        <div
                            {{#if row.same_as_prev}}
                            class="flag flag_same_as_prev{{row.flag_shadow}}"
                            {{else}}
                            class="flag flag_disabled{{row.flag_shadow}}"
                            {{/if}}
                        ></div>
                        <div
                            {{#if row.shared}}
                            class="flag flag_shared{{row.flag_shadow}}"
                            {{else}}
                            class="flag flag_disabled{{row.flag_shadow}}"
                            {{/if}}
                        ></div>
                        <div
                            {{#if row.deleted}}
                            class="flag flag_deleted{{row.flag_shadow}}"
                            {{else}}
                            class="flag flag_disabled{{row.flag_shadow}}"
                            {{/if}}
                        ></div>
                    </div>
                </td>
                <td class="data">{{row.value}}</td>
                <td class="size{{flag_shadow}}">{{row.size}}</td>
                <td class="rl{{flag_shadow}}">{{row.run_length}}</td>
                <td>
                    {{>iter_list iters=row.iters transform_update_id=transform_update_id}}
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
