        <script>
            function toggle_collapsable(collapsable_id, collapsed_id) {
                let collapsable = document.getElementById(collapsable_id);
                let collapsed = document.getElementById(collapsed_id);
                if (collapsable.style.display == "none") {
                    collapsable.style.display = "flex";
                    collapsed.style.display = "none";
                }
                else {
                    collapsable.style.display = "none";
                    collapsed.style.display = "flex";
                }
            }
        </script>
